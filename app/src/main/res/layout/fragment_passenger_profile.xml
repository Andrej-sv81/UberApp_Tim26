<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.passenger.PassengerProfileFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60sp"
                android:src="@drawable/fade_background"
                android:textSize="20sp" />


            <RelativeLayout
                android:id="@+id/profileBoxLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:background="@color/white"
                android:padding="5sp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp">


                <RelativeLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10sp"
                        android:gravity="center_vertical"
                        android:text="First Name:" />

                    <HorizontalScrollView
                        android:layout_width="180sp"
                        android:layout_height="30sp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/nameText"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/nameValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:scrollbars="horizontal"
                            android:singleLine="true" />
                    </HorizontalScrollView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/surnameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_below="@id/nameLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:id="@+id/surnameText"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10sp"
                        android:gravity="center_vertical"
                        android:text="Last Name:" />

                    <HorizontalScrollView
                        android:layout_width="180sp"
                        android:layout_height="30sp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/surnameText"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/surnameValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:scrollbars="horizontal"
                            android:singleLine="true" />
                    </HorizontalScrollView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/usernameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_below="@id/surnameLayout"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:id="@+id/usernameText"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10sp"
                        android:gravity="center_vertical"
                        android:text="Username:" />

                    <HorizontalScrollView
                        android:layout_width="180sp"
                        android:layout_height="30sp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/usernameText"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/usernameValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true" />
                    </HorizontalScrollView>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/phoneNumberLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_below="@id/usernameLayout"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:id="@+id/phoneNumberText"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10sp"
                        android:gravity="center_vertical"
                        android:text="Phone Number:" />


                    <HorizontalScrollView
                        android:layout_width="180sp"
                        android:layout_height="30sp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/phoneNumberText"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/phoneNumberValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:scrollbars="horizontal"
                            android:singleLine="true" />
                    </HorizontalScrollView>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_below="@id/phoneNumberLayout"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:id="@+id/addressTextBox"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10sp"
                        android:gravity="center_vertical"
                        android:text="Address:" />

                    <HorizontalScrollView
                        android:layout_width="180sp"
                        android:layout_height="30sp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/addressTextBox"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/addressValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:scrollbars="horizontal" />
                    </HorizontalScrollView>
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="1sp"
                    android:layout_height="230sp"
                    android:layout_marginStart="120sp"
                    android:layout_marginTop="7sp"
                    android:background="@color/black">

                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileBoxLayout"
                android:layout_centerHorizontal="true"
                >

                <Button
                    android:id="@+id/edit_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20sp"
                    android:text="@string/favouriterides"
                    android:textColor="@color/white">

                </Button>

                <Button
                    android:id="@+id/reports_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edit_profile_btn"
                    android:layout_toRightOf="@+id/edit_profile_btn"
                    android:text="Reports"
                    android:textColor="@color/white">

                </Button>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</FrameLayout>