<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DriverAcceptanceRideActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/citymap"
        android:id="@+id/mapdriver"/>

    <TextView
        android:layout_below="@id/mapdriver"
        android:id="@+id/relationAcceptance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/relation_a_to_b"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@id/relationAcceptance"
        android:id="@+id/milaegeAcceptance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/milaege_km"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@id/milaegeAcceptance"
        android:id="@+id/priceAcceptance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_price"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/passengersAcceptance"
        android:layout_below="@id/priceAcceptance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passengers_number"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/durationaAcceptance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration_duration"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passengersAcceptance"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/durationaAcceptance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptbtn"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/purple_700"
            android:padding="20dp"
            android:text="@string/accept"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@color/black"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/declinebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red"
            android:backgroundTint="@color/purple_700"
            android:padding="20dp"
            android:text="@string/decline"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>




